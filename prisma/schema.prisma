datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  surname  String
  password String
  isActive Boolean
  accounts Account[]
}

model Account {
  id                  Int       @id @default(autoincrement())
  currency            String
  balance             Float
  transactionsHistory String[]
  user                User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              Int
  Deposits             Deposit[]
}

model Deposit {
  id        Int      @id @default(autoincrement())
  amount    Float
  term      Int
  percent  Float
  startDate DateTime
  account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId Int
}

model Admin {
  id       Int      @id @default(autoincrement())
  name     String
  surname  String
  email    String   @unique
  password String
}
